<Application x:Class="DataBetweenForms.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DataBetweenForms"
             StartupUri="/Views/MainWindow.xaml">
    <Application.Resources>


        <FontFamily x:Key="CustomFont">/DataBetweenForms;component/fonts/Chocolate with Brownie.ttf#Chocolate with Brownie</FontFamily>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="15" />
            <Setter Property="Background"
                    Value="LightBlue" />
            <Setter Property="FontFamily"
                    Value="{StaticResource CustomFont}" />
            <Setter Property="FontSize"
                    Value="25px" />
            
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Margin"
                    Value="15" />
            <Setter Property="Background"
                    Value="LightGreen" />
        </Style>
        
    </Application.Resources>
</Application>
